{{!< default}}

<header role="banner" class="header-main {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-image{{/if}}">
	{{#if @blog.navigation}}
    	{{navigation}}
    {{/if}}
    <h1>
    	<a href="{{@blog.url}}">
        	{{#if @blog.logo}}
            	<img class="logo" src="{{@blog.logo}}" alt="{{@blog.title}}">
			{{else}}
            	{{@blog.title}}<br/><small>{{@blog.description}}</small>
			{{/if}}
		</a>
    </h1>
</header>

{{> "loop"}}

{{> "footer"}}