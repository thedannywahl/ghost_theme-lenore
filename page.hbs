{{!< default}}

{{#post}}

	<header role="banner" class="header-main {{#if image}}" style="background-image: url({{image}}){{else}}no-image{{/if}}">
		{{#if @blog.navigation}}
    		{{navigation}}
		{{/if}}
		<h1>
    		<a href="{{@blog.url}}">
        		{{#if @blog.logo}}
            		<img src="{{@blog.logo}}" alt="{{@blog.title}}">
				{{else}}
            		{{@blog.title}}
				{{/if}}
			</a>
		</h1>
	</header>

    <article role="main" class="{{post_class}}">
    
        <header>
            <h1>{{title}}</h1>
        </header>

        <div class="text">
            {{content}}
        </div>

    </article>
{{/post}}

{{> "footer"}}