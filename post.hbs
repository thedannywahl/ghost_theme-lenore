{{!< default}}

{{#post}}

	<header role="banner" class="header-main {{#if image}}" style="background-image: url({{image}}){{else}}no-image{{/if}}">
		{{#if @blog.navigation}}
    		{{navigation}}
		{{/if}}
		<h1>
    		<a href="{{@blog.url}}">
        		{{#if @blog.logo}}
            		<img src="{{@blog.logo}}" alt="{{@blog.title}}">
				{{else}}
            		{{@blog.title}}
				{{/if}}
			</a>
		</h1>
	</header>

    <article role="main" class="{{post_class}}">
    
        <header>
            <h1>{{title}}</h1>

			<small class="meta">
				{{#author}}
					{{#if image}}
						<a href="{{url}}" class="author" style="background-image:url('{{image}}');"><img src="{{image}}" alt="{{name}}'s picture"></a>
					{{/if}}
					<a href="{{url}}">{{name}}</a>
				{{/author}}
				&nbsp;&bull;&nbsp;
				<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
				{{#if tags}}
					&nbsp;&bull;&nbsp;
					<span class="tags">{{tags}}</span>
				{{/if}}
			</small>
        </header>

        <div class="text">
            {{content}}
        </div>

        <section class="share">
        	<ul>
				<li>
					<a class="Email" href="mailto:?&subject={{@blog.title}}%3A%20{{title}}&body={{title}}%0D%0A{{@blog.url}}{{url}}%0D%0A%0D%0A{{excerpt words="45"}}%2E%2E%2E">Email</a>
				</li>
				<li>
					<a class="twitter" href="https://twitter.com/home?status={{@blog.url}}{{url}}%20{{tags prefix="%23" separator=" %23" autolink="false"}}">Twitter</a>
				</li>
				<li>
					<a class="Facebook" href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}">Facebook</a>
				</li>
				<li>
					<a class="Google+" href="https://plus.google.com/share?url={{@blog.url}}{{url}}">Google+</a>
				</li>
				<li>
					<a class="LinkedIn" href="https://www.linkedin.com/shareArticle?mini=true&url={{@blog.url}}{{url}}&title={{title}}&summary={{excerpt words="45"}}&source={{@blog.title}}">LinkedIn</a>
				</li>
				
