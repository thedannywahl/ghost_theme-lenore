{{!< default}}

{{#post}}

	<header role="banner" class="header-main {{#if feature_image}}" style="background-image: url({{img_url feature_image}}){{else}}no-image{{/if}}">
		{{#if @blog.navigation}}
    		{{navigation}}
		{{/if}}
		<h1>
    		<a href="{{@blog.url}}">
        		{{#if @blog.logo}}
            		<img src="{{@blog.logo}}" alt="{{@blog.title}}">
				{{else}}
            		{{@blog.title}}
				{{/if}}
			</a>
		</h1>
	</header>

    <article role="main" class="{{post_class}}">

        <header>
            <h1>{{title}}</h1>

			<small class="meta">
				{{#author}}
					{{#if profile_image}}
						<a href="{{url}}" class="author" style="background-image:url('{{img_url profile_image}}');"><img src="{{img_url profile_image}}" alt="{{name}}'s picture"></a>
					{{/if}}
					<a href="{{url}}">{{name}}</a>
				{{/author}}
				&nbsp;&bull;&nbsp;
				<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
				{{#if tags}}
					&nbsp;&bull;&nbsp;
					<span class="tags">{{tags}}</span>
				{{/if}}
			</small>
        </header>

        <div class="text">
            {{content}}
        </div>

        <section class="share">
        	<ul>
				<li>
					<a href="mailto:?&subject={{encode @blog.title}}%3A%20{{encode title}}&body={{encode title}}%0D%0A{{url absolute="true"}}%0D%0A%0D%0A{{excerpt words="45"}}%2E%2E%2E">Email</a>
				</li>
				<li>
					<a href="https://twitter.com/home?status={{url absolute="true"}}%20{{tags prefix="%23" separator="%20%23" autolink="false"}}">Twitter</a>
				</li>
				<li>
					<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}">Facebook</a>
				</li>
				<li>
					<a href="https://plus.google.com/share?url={{url absolute="true"}}">Google+</a>
				</li>
				<li>
					<a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}&summary={{excerpt words="45"}}&source={{@blog.title}}">LinkedIn</a>
				</li>

