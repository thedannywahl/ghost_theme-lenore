			</ul>
        </section>

    {{#author}}
        <footer class="post-footer vcard cf" role="contentinfo">
                {{#if image}}
                	<div class="wrapper">
                	<a href="{{url}}" class="author" style="background-image: url('{{image}}');">
                    	<img src="{{image}}" alt="{{name}}">
					</a>
					</div>
                {{/if}}
                <div class="author-info meta">
					<a href="{{url}}">{{name}}</a>
                    {{#if location}}&nbsp;&bull;&nbsp;<span>{{location}}</span>{{/if}}
                    {{#if website}}&nbsp;&bull;&nbsp;<a class="site" href="{{website}}">{{website}}</a>{{/if}}
                    {{#if bio}}<p class="bio">{{bio}}</p>{{/if}}
                </div>
        </footer>
    {{/author}}

    </article>
{{/post}}

{{> "footer"}}