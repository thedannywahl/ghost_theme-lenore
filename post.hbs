    {{#author}}
        <footer class="post-footer vcard cf" role="contentinfo">
                {{#if profile_image}}
                	<div class="wrapper">
                	<a href="{{url}}" class="author" style="background-image: url('{{img_url profile_image}}');">
                    	<img src="{{img_url profile_image}}" alt="{{name}}">
					</a>
					</div>
                {{/if}}
                <div class="author-info meta">
					<a href="{{url}}" class="fn">{{name}}</a>
                    {{#if location}}&nbsp;&bull;&nbsp;<span class="adr">{{location}}</span>{{/if}}
                    {{#if website}}&nbsp;&bull;&nbsp;<a class="site" href="{{website}}">{{website}}</a>{{/if}}
