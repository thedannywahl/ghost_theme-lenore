{{!< default}}

<header role="banner" class="header-main {{#if tag.feature_image}}" style="background-image: url({{tag.feature_image}}){{else}}no-image{{/if}}">
	{{#if @blog.navigation}}
    	{{navigation}}
    {{/if}}
    <h1>
    	<a href="{{@blog.url}}">
        	{{#if @blog.logo}}
            	<img src="{{@blog.logo}}" alt="{{@blog.title}}">
			{{else}}
            	{{@blog.title}}<br/><small>{{@blog.description}}</small>
			{{/if}}
		</a>
    </h1>
</header>

<div class="loop">
    <h1 class="title {{#if tag.description}}has-description{{/if}}">Tag: {{tag.name}}</h1>
    {{#if tag.description}}
    	<p class="description"><small>{{tag.description}}</small></p>
    {{/if}}
</div>

{{> "loop"}}

{{> "footer"}}
